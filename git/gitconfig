[alias]
  c = commit
  co = checkout
  co- = checkout @{-1}
  br = branch
  st = status
  s = status
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  dm = diff master
  dmstat = diff master --shortstat
  fa = fetch --all
  checkout-from-github = "!source ~/.githelpers && reset_from_github"

  # branches
  overwrite-branch-with-origin = git-overwrite-branch-with-origin

  # logs
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  logtitles = log --pretty=format:%s

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   l = all commits, only current branch
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
	plog = log --graph --pretty=format:'%h -%d %s %n' --abbrev-commit --date=relative --branches

[user]
	name = Alex Oliveira
	email = kurko@users.noreply.github.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[color "status"]
  added = green
  changed = red
  untracked = white
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red
  #new = green

[gc]
  auto = 1

[core]
	editor = vim

[merge]
  tool = vimdiff
[github]
	user = kurko
[push]
	default = simple
[ghi]
	token = !security find-internet-password -a kurko -s github.com -l 'ghi token' -w

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[web]
	browser = open
[commit]
  template = ~/.gitmessage
	verbose = true
[log]
	date = iso
